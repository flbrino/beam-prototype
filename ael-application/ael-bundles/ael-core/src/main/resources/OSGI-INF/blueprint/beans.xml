<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <reference-list id="runnerServices" interface="com.github.ccaspanello.ael.api.RunnerService" />

  <bean id="aelApplication" class="com.github.ccaspanello.ael.core.AelApplication" scope="singleton"
        init-method="init"
        destroy-method="destroy">
    <argument ref="blueprintBundleContext"/>
    <argument ref="runnerServices" />
  </bean>

  <bean id="runCommandService" class="com.github.ccaspanello.ael.core.RunCommandServiceImpl" scope="singleton"
        init-method="init"
        destroy-method="destroy">
    <argument ref="blueprintBundleContext"/>
    <argument ref="runnerServices" />
  </bean>

  <service ref="runCommandService" interface="com.github.ccaspanello.ael.api.RunCommandService" />

</blueprint>